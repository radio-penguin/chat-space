.message-list__box{"data-message-id": "#{message.id}"}
  .message-list__box__info
    %p.message-list__box__info__talker
      = message.user.name
    %p.message-list__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.message-list__box__text
    - if message.content.present?
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?