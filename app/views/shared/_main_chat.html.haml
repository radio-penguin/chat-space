.chat-main
  .group-info
    .group-info__left-box
      %h2.group-info__left-box__groupname
        = @group.name
      %ul.group-info__left-box__member-list
        Member:
        - @group.users.each do |user|
          %lu.group-info__left-box__member-list__member
            = user.name
    = link_to edit_group_path(@group), class: "group-info__edit-btn" do
      Edit

  .message-list
    = render @messages

  .message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          =icon('fas', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', id:'send-btn', class: 'submit-btn'